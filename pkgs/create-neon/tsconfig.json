{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "sourceMap": false,
    "outDir": "dist",
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "dev/**/*", "test/**/*"],
  "exclude": ["./node_modules/", "./dist/"]
}
