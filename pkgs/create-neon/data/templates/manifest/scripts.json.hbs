{
  "test": "{{#eq packageSpec.library.lang compare="ts"}}tsc && {{/eq}}cargo test",
  "cargo-build": "{{#eq packageSpec.library.lang compare="ts"}}tsc && {{/eq}}cargo build --message-format=json > cargo.log",
  "cross-build": "{{#eq packageSpec.library.lang compare="ts"}}tsc && {{/eq}}cross build --message-format=json > cross.log",
  "postcargo-build": "neon dist < cargo.log",
  "postcross-build": "neon dist -m /target < cross.log",
  "debug": "npm run cargo-build --",
  "build": "npm run cargo-build -- --release",
  "cross": "npm run cross-build -- --release"{{#if packageSpec.library}},
  "prepack": "{{#eq packageSpec.library.lang compare="ts"}}tsc && {{/eq}}neon update",
  "version": "neon bump --binaries platforms && git add ."{{/if}}
}
